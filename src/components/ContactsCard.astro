---
import Card from "./Card/index.astro";
import { LINKS } from "../lib/constants";
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-2">
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="text-white text-xl font-bold">
        Ponte en Contacto Conmigo!
      </h1>
    </header>
    <address class="flex flex-col mt-4">
      <h2 class="text-gray-500">Contacto</h2>
      <p class="text-sm">edwin.rodiguez.contacto@proton.me</p>
      <p>SV</p>
    </address>
    <div class="flex flex-col mt-4 w-fit">
      <h2 class="text-gray-500">Redes Sociales</h2>
      <ul>
        <li>
          <a href={LINKS.instagram} target="_blank">Instagram</a>
        </li>
        <li>
          <a href={LINKS.github} target="_blank">Github</a>
        </li>
        <li>
          <a href={LINKS.facebook} target="_blank">Facebook</a>
        </li>
      </ul>
    </div>
  </div>
